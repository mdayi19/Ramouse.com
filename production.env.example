APP_NAME=Ramouse
APP_ENV=production
APP_DEBUG=false
APP_URL=https://ramouse.com
APP_TIMEZONE=Asia/Damascus

# App Key (Run 'php artisan key:generate' if empty, but for production put a static key here)
APP_KEY=base64:xM62EFOA+YrqYqv/MHhdzl0O2d74aMA5UMXqzULTeiQ=

# Database
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=ramouse_db
DB_USERNAME=ramouse_user
DB_PASSWORD=YourSecurePassword123!

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Reverb (WebSocket)
# IMPORTANT: Use simple strings for keys, NOT base64
REVERB_APP_ID=ramouse-app
REVERB_APP_KEY=ramouse-app-key
REVERB_APP_SECRET=ramouse-app-secret
REVERB_HOST=reverb
REVERB_PORT=8080
REVERB_SCHEME=http

# Vite (Frontend) - MUST MATCH REVERB SETTINGS ABOVE
# IMPORTANT: These are baked into the frontend at build time.
# If you change these, you must run: docker-compose up -d --build frontend
VITE_API_URL=/api
VITE_REVERB_HOST=ramouse.com
VITE_REVERB_PORT=443
VITE_REVERB_SCHEME=https
VITE_REVERB_APP_KEY=ramouse-app-key

# VAPID Keys for Push Notifications (Generate with 'php artisan webpush:vapid')
VITE_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
