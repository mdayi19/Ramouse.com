# Development Environment Configuration
# Copy this to .env.development

# API Configuration
EXPO_PUBLIC_API_URL=https://ramouse.com/api
EXPO_PUBLIC_API_TIMEOUT=30000

# Reverb (WebSocket) Configuration
EXPO_PUBLIC_REVERB_APP_KEY=ramouse-app-key
EXPO_PUBLIC_REVERB_HOST=ramouse.com
EXPO_PUBLIC_REVERB_PORT=443
EXPO_PUBLIC_REVERB_SCHEME=https

# App Configuration
EXPO_PUBLIC_APP_NAME=Ramouse
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENVIRONMENT=development

# Feature Flags
EXPO_PUBLIC_ENABLE_BIOMETRICS=true
EXPO_PUBLIC_ENABLE_CERTIFICATE_PINNING=false
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true

# Debug
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug
