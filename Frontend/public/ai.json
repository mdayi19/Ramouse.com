{
    "$schema": "https://ai-manifest.schema.org/enterprise-v1.json",
    "manifest_version": "1.0",
    "last_updated": "2026-01-28",
    "organization": {
        "name": "Ramouse",
        "legal_name": "Ramouse Platform",
        "website": "https://ramouse.com",
        "description": "Syria's leading automotive marketplace for car sales, rentals, spare parts, technicians, and tow services.",
        "country": "SY",
        "industry": [
            "Automotive",
            "Marketplace",
            "E-commerce",
            "Transportation"
        ],
        "contact": {
            "ai": "ai@ramouse.com",
            "legal": "legal@ramouse.com",
            "support": "info@ramouse.com"
        }
    },
    "ai_policy": {
        "human_readable_policy": "https://ramouse.com/ai-usage",
        "machine_readable_policy": "https://ramouse.com/llms.txt"
    },
    "usage_rights": {
        "allowed": [
            "crawling",
            "indexing",
            "summarization",
            "answer_generation",
            "citation",
            "knowledge_graph_ingestion"
        ],
        "restricted": [
            "training_proprietary_models_without_attribution",
            "dataset_resale",
            "competitive_dataset_replication"
